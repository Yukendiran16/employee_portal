<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <mvc:annotation-driven/>
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/trainer"/>
            <mvc:mapping path="/trainers"/>
            <mvc:mapping path="/trainee"/>
            <mvc:mapping path="/trainees"/>
            <mvc:mapping path="/assign_trainer"/>
            <mvc:mapping path="/assign_trainee"/>
            <mvc:mapping path="/un_assign_trainer"/>
            <mvc:mapping path="/un_assign_trainee"/>
            <bean class="com.ideas2it.interceptor.EmployeeInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>
    <bean class="com.ideas2it.controller.TrainerServlet">
        <constructor-arg ref="employeeService"/>
    </bean>
    <bean class="com.ideas2it.controller.TraineeServlet">
        <constructor-arg ref="employeeService"/>
    </bean>
    <bean id="employeeService" class="com.ideas2it.service.impl.EmployeeServiceImpl">
        <constructor-arg ref="employeeDao"/>
    </bean>
    <bean id="employeeDao" class="com.ideas2it.dao.impl.EmployeeDaoImpl"/>
</beans>